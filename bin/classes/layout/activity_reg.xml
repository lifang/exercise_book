<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg_bg"
    android:gravity="center_horizontal"
    android:paddingBottom="240px"
    android:paddingTop="275px"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/reg_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/reg_bg2" />
 <EditText
        android:id="@+id/reg_nicheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_logo"
        android:layout_marginTop="36.53px"
        android:background="@drawable/reg_bg3"
        android:gravity="center"
        android:hint="@string/nicheng"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#217145"
        android:textSize="30px" />
  <EditText
        android:id="@+id/reg_xingming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_nicheng"
        android:layout_marginTop="16px"
        android:background="@drawable/reg_bg3"
        android:gravity="center"
        android:hint="@string/xingming"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#217145"
        android:textSize="30px" />

    <EditText
        android:id="@+id/reg_banjiyanzhengma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_xingming"
        android:layout_marginTop="16px"
        android:background="@drawable/reg_bg3"
        android:gravity="center"
        android:hint="@string/banjiyanzhengma"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#217145"
        android:textSize="30px" />
 <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
        android:background="@drawable/reg_bg4"
        android:gravity="center"
        android:onClick="reg_queren"
        android:text="@string/queren"
        android:textColor="@color/white"
        android:textSize="30px" />

</RelativeLayout>