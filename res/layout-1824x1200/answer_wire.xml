<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answer_wireLinearlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58px"
        android:text="请将下面正确的词组搭配连接起来。"
        android:textColor="#595c5e"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15px"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/answer_wireLeft"
            android:layout_width="280px"
            android:layout_height="fill_parent"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/answer_wire_canvas"
            android:layout_width="273px"
            android:layout_height="940px"
            android:layout_marginTop="50px" />

        <LinearLayout
            android:id="@+id/answer_wireRight"
            android:layout_width="280px"
            android:layout_height="fill_parent"
            android:orientation="vertical" />
    </LinearLayout>

</LinearLayout>