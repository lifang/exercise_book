<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/reg_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/reg1_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165px"
        android:src="@drawable/logo_1" />

    <EditText
        android:id="@+id/reg_inputkey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input1"
        android:gravity="center"
        android:hint="@string/inputkey"
        android:layout_marginTop="-80px"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#217145"
        android:textSize="37px" />

    <Button
        android:id="@+id/inputkey_queren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_inputkey"
        android:layout_marginTop="30px"
        android:background="@drawable/queren1"
        android:gravity="center"
        android:text="@string/queren"
        android:textColor="@color/white"
        android:textSize="37px" />

    <Button
        android:id="@+id/inputkey_nextstep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputkey_queren"
        android:layout_marginTop="30px"
        android:background="@drawable/queren1"
        android:gravity="center"
        android:text="@string/nextstep"
        android:textColor="@color/white"
        android:textSize="37px" />

</LinearLayout>