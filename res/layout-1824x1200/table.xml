<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <!-- 共用标题的组件 -->

    <RelativeLayout
        android:id="@+id/main_top"
        android:layout_width="fill_parent"
        android:layout_height="106px"
        android:layout_alignParentTop="true"
        android:background="@color/top_qianlv"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/img_tab_now"
            android:layout_width="150px"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="54px"
                android:layout_height="50px"
                android:layout_marginLeft="68px"
                android:layout_marginTop="35px"
                android:background="#00000000"
                android:src="@drawable/logo" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150px"
            android:layout_marginTop="45px"
            android:gravity="center"
            android:maxLines="1"
            android:text="丁作强"
            android:textColor="@color/white"
            android:textSize="21px" />

        <LinearLayout
            android:layout_width="341.67px"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@color/top_shenlv"
            android:orientation="horizontal" >

            <com.comdosoft.ExerciseBook.tools.CircularImage
                android:id="@+id/user_face"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="30px"
                android:src="@drawable/moren" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="182px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="40.5px"
                android:gravity="center"
                android:maxLines="1"
                android:text="丁作强"
                android:textColor="@color/white"
                android:textSize="30px" />

            <LinearLayout
                android:id="@+id/user_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0.05px" >

                <ImageView
                    android:layout_width="26px"
                    android:layout_height="15px"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="28.5px"
                    android:layout_marginTop="62.5px"
                    android:background="@drawable/userinfo_button" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <!-- 中间不同的部分 -->

    <LinearLayout
        android:id="@+id/middle_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/main_top"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>