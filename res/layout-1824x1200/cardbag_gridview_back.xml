<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="513px"
    android:layout_height="512px" >

    <LinearLayout
        android:id="@+id/backll"
        android:layout_width="513px"
        android:layout_height="512px"
        android:background="@drawable/cardback"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/backreson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38px"
                android:layout_marginTop="40px"
                android:text="@string/returntext"
                android:textColor="@color/quesreson"
                android:textSize="33px" />

            <ImageView
                android:id="@+id/rightIv"
                android:layout_width="120px"
                android:layout_height="120px"
                android:layout_below="@id/backreson"
                android:visibility="gone" />

            <TextView
                android:id="@+id/rightanswerb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rightIv"
                android:layout_marginLeft="38px"
                android:layout_marginTop="30px"
                android:text="We can watch it together!Good!"
                android:textColor="@color/quescontent"
                android:textSize="45.93px" />

            <ImageView
                android:id="@+id/cardbatread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="38px"
                android:layout_marginTop="40px"
                android:src="@drawable/cardbatread" />

            <ImageView
                android:id="@+id/cardbatdel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="38px"
                android:layout_marginRight="38px"
                android:src="@drawable/cardbagdel" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>