<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answer_select_item_linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/answer_select_item_style"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/answer_select_item_textImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/answer_select_item_img_style"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/answer_select_item_textView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="#595c5e"
        android:textSize="24dp" />

</LinearLayout>