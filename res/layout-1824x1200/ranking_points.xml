<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e0000000"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="800px"
        android:layout_marginLeft="170px"
        android:layout_marginRight="170px"
        android:background="@drawable/ranking_bg"
        android:gravity="center" >

        <ListView
            android:id="@+id/rankingLv"
            android:layout_width="wrap_content"
            android:layout_height="450px"
            android:layout_marginLeft="110px"
            android:layout_marginRight="20px"
            android:layout_marginTop="200px"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:listSelector="#00000000"
            android:scrollbars="none" >
        </ListView>

        <ImageView
            android:id="@+id/rank_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-55px"
            android:layout_marginRight="20px"
            android:src="@drawable/rank_close" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
             android:layout_marginTop="-13px"
            android:gravity="center" >

            <TextView
                android:id="@+id/rank_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="若相守永不分离"
                android:textColor="@color/white"
                android:textSize="43px" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>