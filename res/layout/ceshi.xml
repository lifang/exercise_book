<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/main_top"
        android:layout_width="fill_parent"
        android:layout_height="106px"
        android:layout_alignParentTop="true"
        android:background="@color/top_qianlv"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_tab_now"
            android:layout_width="54px"
            android:layout_height="50px"
            android:layout_marginLeft="68px"
            android:layout_marginTop="35px"
            android:background="#00000000"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:background="@color/top_shenlv"
            android:orientation="horizontal" >

            <com.comdosoft.ExerciseBook.tools.CircularImage
                android:id="@+id/user_face"
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="16px"
                android:layout_marginTop="30px"
                android:src="@drawable/moren" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:layout_marginTop="40.5px"
                android:text="丁作强"
                android:textColor="@color/white"
                android:textSize="30px" />

            <ImageButton
                android:id="@+id/user_button"
                android:layout_width="26px"
                android:layout_height="15px"
                android:layout_marginLeft="15px"
                android:layout_marginRight="28.5px"
                android:layout_marginTop="62.5px"
                android:background="@drawable/userinfo_button" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/tall"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <com.comdosoft.ExerciseBook.tools.VeticalTabWigdet2
                        android:id="@android:id/tabs"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="@color/red"
                        android:gravity="top" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tabfl"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>

</LinearLayout>