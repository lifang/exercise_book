<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homework_ing"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="170px"
        android:background="@color/white" >

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="158px"
            android:layout_marginTop="21px"
            android:text="发布时间为 17:30"
            android:textSize="25px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:text="今日作業截至时间为"
                android:textColor="#000000"
                android:textSize="35px" />

            <TextView
                android:id="@+id/end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4px"
                android:layout_marginTop="10px"
                android:text="20：30"
                android:textColor="@color/red"
                android:textSize="35px" />
        </LinearLayout>

        <ImageView
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="158px"
            android:src="@drawable/work_08" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/work_bg"
        android:gravity="center_horizontal">

        <GridView
            android:id="@+id/gridview"
            android:layout_width="900px"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:layout_marginTop="100px"/>
    </LinearLayout>

</LinearLayout>