<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="343.71px"
    android:layout_height="343.04px" >

    <LinearLayout
        android:id="@+id/backll"
        android:layout_width="343.71px"
        android:layout_height="343.04px"
        android:background="@drawable/cardback"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/backreson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.46px"
                android:layout_marginTop="26.8px"
                android:text="@string/returntext"
                android:textColor="@color/quesreson"
                android:textSize="21px" />

            <ImageView
                android:id="@+id/rightIv"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_below="@id/backreson"
                android:layout_marginLeft="25.46px"
                android:visibility="gone" />

            <TextView
                android:id="@+id/rightanswerb"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:layout_below="@id/rightIv"
                android:layout_marginLeft="25.64px"
                android:layout_marginRight="25.64px"
                android:layout_marginTop="20.1px"
                android:ellipsize="end"
                android:lines="4"
                android:text="We can watch it together!Good!"
                android:textColor="@color/quescontent"
                android:textSize="32.15px" />

            <ImageView
                android:id="@+id/cardbatread"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25.46px"
                android:layout_marginTop="20px"
                android:src="@drawable/cardbatread"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/cardbatdel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25.46px"
                    android:layout_marginRight="25.46px"
                    android:src="@drawable/cardbagdel" />
            </LinearLayout>

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/backreson"
                android:layout_alignBottom="@+id/backreson"
                android:layout_marginLeft="20dp"
                android:background="@drawable/cardchoice"
                android:layout_toRightOf="@+id/backreson"
                android:visibility="gone"
                android:text="查看全文" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>