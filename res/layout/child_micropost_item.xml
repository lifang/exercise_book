<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hsv2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none" >

    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/child_user_left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#828181"
            android:orientation="vertical"
            android:paddingBottom="60px"
            android:paddingLeft="84px"
            android:paddingRight="132px" >

            <ImageView
                android:id="@+id/child_user_face"
                android:layout_width="159px"
                android:layout_height="159px"
                android:layout_marginTop="77px"
                android:background="@drawable/moren" />

            <ImageView
                android:id="@+id/child_jiantou"
                android:layout_width="29px"
                android:layout_height="29px"
                android:layout_marginLeft="8px"
                android:layout_marginTop="18px"
                android:background="@drawable/childjiantou" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/child_user_face"
                android:layout_marginLeft="37px"
                android:layout_toRightOf="@+id/child_user_face" >

                <LinearLayout
                    android:id="@+id/child_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/child_message_senderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张三"
                        android:textColor="@color/white"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/child_message_senderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text="回复"
                        android:textColor="#cacaca"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/child_message_reciverName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text="李四"
                        android:textColor="@color/white"
                        android:textSize="30px" />

                    <TextView
                        android:id="@+id/child_message_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="2013/02/22  12:12"
                        android:textColor="#cacaca"
                        android:textSize="30px" />
                </LinearLayout>

                <TextView
                    android:id="@+id/child_micropost_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/child_message"
                    android:text="啊啊啊啊啊啊啊等等等等等等"
                    android:textColor="#cacaca"
                    android:textSize="33px" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_action2"
            android:layout_width="160.5px"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/child_user_left"
            android:background="#6a6868"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/child_micropost_delete"
                android:layout_width="55px"
                android:layout_height="55px"
                android:layout_marginBottom="51.5px"
                android:background="@drawable/homepage_shanchu"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/child_micropost_huifu"
                android:layout_width="55px"
                android:layout_height="55px"
                android:background="@drawable/homepage_huifu" />
        </LinearLayout>
    </LinearLayout>

</HorizontalScrollView>