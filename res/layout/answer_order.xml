<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeecec"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36px"
        android:text="请将下面的单词排成通顺的语句。"
        android:textColor="#595c5e"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/answer_order_subject_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32px"
        android:gravity="center"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/answer_order_option_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="87px"
        android:gravity="center"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="107px"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/answer_order_back"
            android:layout_width="300px"
            android:layout_height="100px"
            android:background="@drawable/answer_wire_item_check_style"
            android:gravity="center"
            android:text="后退一步"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/answer_order_again"
            android:layout_width="300px"
            android:layout_height="100px"
            android:layout_marginLeft="50px"
            android:background="@drawable/answer_wire_item_check_style"
            android:gravity="center"
            android:text="重新排序"
            android:textColor="#ffffff"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>