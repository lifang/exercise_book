<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tagrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/biaoqian"
        android:layout_width="343.04px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80.4px"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="343.04px"
            android:layout_height="123.25px"
            android:background="@drawable/biaoqianback"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="312.89px"
                android:layout_height="50.25px"
                android:layout_marginTop="40.2px"
                android:background="@drawable/biaoqianwriteback"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/biaoqianfind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6px"
                    android:src="@drawable/biaoqianfind" />

                <EditText
                    android:id="@+id/biaoqianet"
                    android:layout_width="205.02px"
                    android:layout_height="wrap_content"
                    android:background="@drawable/biaoqianwriteback"
                    android:hint="搜索知识点"
                    android:maxEms="10"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="343.71px"
            android:layout_height="wrap_content"
            android:background="@color/top_qianlv"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/biaoqianlv"
                android:layout_width="343.71px"
                android:layout_height="250px" >
            </ListView>

            <TextView
                android:id="@+id/newTv"
                android:layout_width="343.71px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="35px"
                android:textSize="23px"
                android:text="aaaa"
                android:padding="10px"
               android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>