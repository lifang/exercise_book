<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="343.71px"
    android:layout_height="343.04px" >

    <RelativeLayout
        android:layout_width="343.71px"
        android:layout_height="343.04px"
        android:background="@drawable/cardfont"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/reson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25.45px"
                android:layout_marginTop="26.8px"
                android:text="@string/reson1"
                android:textColor="@color/quesreson"
                android:textSize="21px" />

            <TextView
                android:id="@+id/youranswer"
                android:layout_width="wrap_content"
                android:layout_height="130px"
                android:layout_below="@id/reson"
                android:layout_marginLeft="25.46px"
                android:layout_marginRight="20px"
                android:layout_marginTop="20.1px"
                android:ellipsize="end"
                android:lines="3"
                android:text="tagether1111111111111111111111111111"
                android:textColor="@color/quescontent"
                android:textSize="32.15px" />

            <ImageView
                android:id="@+id/fontIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10px"
                android:layout_marginTop="26.8px"
                android:src="@drawable/ques_reson" />
        </RelativeLayout>

        <TextView
            android:id="@+id/bqtv1"
            android:layout_width="343.71px"
            android:layout_height="39.53px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bqtv"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200px"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rightanswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.46px"
            android:text="正确拼写"
            android:textColor="@color/quesreson"
            android:textSize="21px" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="300px"
            android:layout_height="70px"
            android:layout_below="@id/rightanswer"
            android:layout_marginLeft="25.468px"
            android:layout_marginRight="25.468px"
            android:ellipsize="end"
            android:lines="2"
            android:text="together"
            android:textColor="@color/quesreson"
            android:textSize="30.77px" />
    </RelativeLayout>

</RelativeLayout>