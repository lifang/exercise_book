<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/before_click"
    android:orientation="vertical" >
    
	<EditText
	    android:layout_marginTop="29.5px"
	    android:id="@+id/sendmesset"
	    android:layout_width="637.17px"
	    android:layout_height="144.05px"
	    android:gravity="top"
	    android:maxLength="60"
	     android:background="@drawable/sendmesset"
	     android:hint="@null"
	    />
	<Button
	    android:layout_marginTop="18.1px"
	    android:id="@+id/sendmess_btn"
	    android:layout_width="192.3px"
	    android:layout_height="55.6px"
	    android:textSize="21px" 
	    android:text="发布"
	     android:background="@drawable/sendmessbtn"
	    />
</LinearLayout>
