<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="30px"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/ranking_mingci"
        android:layout_width="114px"
        android:layout_height="wrap_content"
        android:text="1st"
        android:textColor="@color/white"
        android:textSize="43px" />

    <com.comdosoft.ExerciseBook.tools.CircularImage
        android:id="@+id/rank_face"
        android:layout_width="60px"
        android:layout_height="60px"
        android:src="@drawable/moren" />
        <TextView
        android:id="@+id/ranking_name"
        android:layout_width="320px"
        android:layout_height="wrap_content"
        android:text="若相守永不分离"
        android:textColor="@color/white"
         android:maxLines="1"
        android:singleLine="true"
        android:layout_marginLeft="70px"
        android:textSize="43px" />
            <TextView
        android:id="@+id/ranking_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11110"
        android:textColor="@color/white"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="43px" />

</LinearLayout>